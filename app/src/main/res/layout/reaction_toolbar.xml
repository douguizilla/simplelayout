<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <ImageButton
        android:id="@+id/postFavoriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/ic_favorite_border_black"/>

    <ImageButton
        android:id="@+id/postCommitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/ic_chat_outline_black"/>

    <ImageButton
        android:id="@+id/postShareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/ic_share_share"/>

    <ImageButton
        android:id="@+id/postBookMarkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_bookmark_black"/>


</androidx.appcompat.widget.Toolbar>